  .urbana__news
    display grid
    grid-gap $gap__small
    grid-template-columns repeat(4, 1fr)

    .news
      display flex
      flex-flow column wrap

      .news__img
        margin-bottom 2vh

      &:nth-child(1)
        flex-flow row wrap
        grid-column 1 / -1

        .news__cat
          width 100%

        .news__title
          padding-right $gap__small
          text-align right

        .news__title, .news__description
          flex 1 0 0

      &:nth-child(2)
        grid-column 1 / 3

      &:nth-child(3)
        grid-column 3 / 5

        .news__cat
          order 1

        .news__title
          order 2

        .news__description
          order 3

        .news__img
          order 4

