.latest__posts
  .posts
    display grid
    grid-column-gap $gap__small
    grid-template-columns repeat(3, 1fr)

    .post
      display flex
      flex-flow column wrap

      &:nth-child(2)
        .post__cat
          order 2

        .post__date
          order 4

        .post__title
          order 3

        .post__description
          order 4

        .post__img
          margin-bottom 2vh
          order 1

  header
    h1
      &:before, &:after
        background $color__catOne

.urbana__bits
  display grid
  grid-gap $gap__small
  grid-template-columns 55vw 1fr
  position relative

  .cat, .title, .description
    a, p
      &::selection
        background $color__catTwo
        color white
        text-shadow none

  .cat
    a
      box-shadow 0 -1px 0 0 white inset, 0 -2px 0 0 white inset, 0 -4px 0 0 transparent inset
