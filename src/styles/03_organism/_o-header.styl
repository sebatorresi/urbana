header
  align-items: center
  display: flex
  margin-bottom: 1.5rem
  justify-content: space-between
  padding: 1.5rem 1rem 0
  position: relative

  @media (min-width: $bp-xl)
    margin-bottom: 3rem
    padding: 2rem 5rem 0

#logo

  svg
    fill: $color__catOne
    width: 5rem

#social
  display: none

  @media (min-width: $bp-xl)
    display: none
    // display: flex
    // height: 38px
    // margin-left: 5rem
    position: absolute
    right: 3%
    top: 40vh
    transform: rotate(360deg)
    // transform-origin: 0 0
    writing-mode: vertical-rl
    z-index: 10

    li
      display: block
      margin-bottom: 1rem

      // &:last-child
      //   margin: 0

      a
        display: block
        font-size: .8em
        letter-spacing: 5px
        text-transform: uppercase

        svg
          fill: $color__catOne
          transition: all .4s ease-out
          width: 38px

          &:focus,
          &:visited,
          &:hover
            fill: rgba($color__catOne, .7)

