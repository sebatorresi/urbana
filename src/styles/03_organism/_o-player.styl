.full--player
  background rgba($bg__color, .93)
  border-top 1px solid darken($bg__color, 5%)
  bottom 0
  display flex
  flex-flow column wrap
  height 5rem
  justify-content space-between
  left 0
  overflow hidden
  position fixed
  right 0
  width 100%
  z-index 100

  .player--info
    display flex
    flex-flow column wrap
    height 5rem
    justify-content center

    // width: 50vh
    .conductor--ph
      height 100%
      width 10vh

      img
        height 5rem
        object-fit cover
        width 100%

    .programa, .horario
      font-family 'candal', sans-serif
      height auto
      margin-left 1rem
      width 100%

    .programa
      color darken($bg__color, 60%)
      font-size 1.2em
      text-transform uppercase

    .horario
      color lightness($bg__color, 60%)
      font-size .8em

  .player--controles
    align-content center
    justify-content: end
    // align-items center
    // display flex
    // flex-flow row wrap
    display grid
    grid-template-columns auto 5rem
    justify-items end

    .control
      align-items center
      align-self flex-end
      display flex
      height 5rem
      margin-right 1rem
      width 5rem

      img
        height 3.5rem
        width 100%

      &.volumen
        width auto

        input[type=range]
          background-color lightness($bg__color, 50%)
          background-image linear-gradient(darken($bg__color, 70%), darken($bg__color, 70%))
          background-repeat no-repeat
          background-size 50% 100%
          border-radius 10px
          cursor pointer
          height 4px
          margin auto
          outline none
          padding 0
          width 5rem
          -webkit-appearance none

        input[type=range]::-webkit-slider-runnable-track
          background transparent
          border none
          box-shadow none
          -webkit-appearance none

        input[type=range]::-moz-range-track
          background transparent
          border none
          box-shadow none

        input[type=range]::-moz-focus-outer
          border 0

        input[type=range]::-webkit-slider-thumb
          background darken($bg__color, 60%)
          border 0
          border-radius 100%
          box-shadow 0 0 1px 0 rgba(0, 0, 0, .1)
          height 10px
          width 10px
          -webkit-appearance none

        input[type=range]::-moz-range-thumb
          background darken($bg__color, 60%)
          border 0
          border-radius 100%
          box-shadow 0 0 1px 0 rgba(0, 0, 0, .1)
          height 10px
          width 10px

      &.play, &.stop
        cursor pointer
        order 2
